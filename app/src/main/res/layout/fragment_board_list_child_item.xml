<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/light_ripple_background"
    android:orientation="vertical">

    <TextView
        android:id="@+id/child_board_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="24dp"
        android:layout_toLeftOf="@+id/make_favourite_button"
        android:gravity="left|center"
        android:text="ne stoilo vskryvat etot kod"
        android:textColor="@color/colorAccent" />

    <ImageView
        android:id="@+id/make_favourite_button"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:clickable="true"
        android:padding="14dp"
        app:srcCompat="@drawable/ic_favorite_border_gray_24dp" />

</RelativeLayout>