<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.koresuniku.wishmasterV4">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/wishmaster_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:name="com.koresuniku.wishmasterV4.application.WishmasterApplication"
        android:theme="@style/AppTheme">
        <activity android:name="com.koresuniku.wishmasterV4.ui.dashboard.DashboardActivity"
            android:configChanges="orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="com.koresuniku.wishmasterV4.ui.thread_list.ThreadListActivity"
            android:configChanges="orientation|screenSize"/>
    </application>

    <meta-data
        android:name="com.bumptech.glide.integration.okhttp.OkHttpGlideModule"
        android:value="GlideModule" />

</manifest>